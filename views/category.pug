html(lang= "en")
  head
    meta(charset ="UTF-8")
    meta(name ="viewport", content ="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/category.css")
    include ./baseHeader.pug
  body
    include ./gotoTop.pug
    div(class='app')
      include ./menu.pug
      div(style='width: 100%', class='context')
        div(class='category-c')
          each val, category in data
            div
              a(class='category', href=`/blog/view/category/${category}`)= `${category}(${val})`
