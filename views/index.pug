html(lang= "en")
  head
    meta(charset ="UTF-8")
    meta(name ="viewport", content ="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/css/index.css")
    include ./baseHeader.pug
    script(type="text/javascript").
      var _hmt = _hmt || [];
      (function() {
        var hm = document.createElement("script");
        hm.src = "https://hm.baidu.com/hm.js?84749f5eacfb94fcc118d50af0876a57";
        var s = document.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(hm, s);
      })()
  body
    include ./gotoTop.pug
    div(class='app')
      include ./menu.pug
      ul(class='context')
        each val in articles
          li(class='item')
            a(href=`/blog/view/${val._id}` class='item-a')
            div(class='title')= val.title
            div(class='content')= val.description
            div(class='footer')
              div
                <svg class="icon" aria-hidden="true">
                  <use xlink:href="#file"></use>
                </svg>:
                span(class='footer-item')= val.categories
              div
                <svg class="icon" aria-hidden="true">
                  <use xlink:href="#tag"></use>
                </svg>:
                span(class='footer-item')= val.tags
              div
                <svg class="icon" aria-hidden="true">
                  <use xlink:href="#calendar1"></use>
                </svg>:
                span(class='footer-item')= val.createTime
              div
                <svg class="icon" aria-hidden="true">
                  <use xlink:href="#post"></use>
                </svg>:
                span(class='footer-item')= val.updateTime
              span(class='footer-item')